<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_gravity="center"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="4dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="2dp"
    card_view:contentPaddingLeft="10dp"
    card_view:contentPaddingRight="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/xTypeTv"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/plan_card_label"
            android:fontFamily="@font/roboto_boldcondensed"
            android:gravity="center"
            android:text="标签"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/xKeepDayTv"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/xTypeTv"
            android:fontFamily="@font/roboto_italic"
            android:text="已坚持4天"
            android:textSize="13sp" />

        <View
            android:id="@+id/xProcessV"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:background="@color/colorAccent" />

        <TextView
            android:id="@+id/xContentTv"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@id/xTypeTv"
            android:layout_marginTop="8dp"
            android:background="@drawable/plan_card_content_bg"
            android:padding="2dp"
            android:text="存钱计划"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/xCountDownTv"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/xContentTv"
            android:layout_marginTop="10dp"
            android:maxLines="1"
            android:text="距离完成时间还有8天" />

        <TextView
            android:id="@+id/xSignBtn"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/xContentTv"
            android:layout_marginTop="6dp"
            android:background="@drawable/done_btn_bg"
            android:fontFamily="@font/roboto_boldcondensed"
            android:gravity="center"
            android:text="今日打卡"
            android:textColor="@color/white"
            android:textSize="12sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>