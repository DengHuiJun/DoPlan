<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottom_bar_ly"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/color_main_bottom"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/bottom_plan_ly"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/bottom_plan_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/icon_bottom_plan_normal" />

        <TextView
            android:id="@+id/bottom_plan_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="计划" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_add_ly"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/bottom_add_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/icon_bottom_add_normal" />

        <TextView
            android:id="@+id/bottom_add_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="添加" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_me_ly"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/bottom_me_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/icon_bottom_me_normal" />

        <TextView
            android:id="@+id/bottom_me_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="我的" />

    </LinearLayout>

</LinearLayout>
