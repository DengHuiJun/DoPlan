<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 获得焦点但未按下时的背景图片 -->
    <item android:drawable="@drawable/done_btn_normal_bg" android:state_enabled="true" android:state_focused="true" android:state_pressed="false"/>

    <!-- 按下时的背景图片 -->
    <item android:drawable="@drawable/done_btn_press_bg" android:state_enabled="true" android:state_pressed="true"/>
    <item android:drawable="@drawable/done_btn_press_bg" android:state_enabled="true" android:state_focused="true"/>

    <item android:drawable="@drawable/done_btn_normal_bg"/>
</selector>